{
  "name": "next-read",
  "version": "1.0.0",
  "description": "Chrome extension to enhance Libby with book ratings, reviews, and genres",
  "type": "module",
  "scripts": {
    "build": "node scripts/generate-icons.js && node scripts/build.js && node scripts/copy-static.js",
    "watch": "node scripts/build.js && node scripts/copy-static.js",
    "generate-icons": "node scripts/generate-icons.js",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "check": "yarn type-check && yarn lint && yarn format:check",
    "fix": "yarn lint:fix && yarn format"
  },
  "packageManager": "yarn@1.22.22",
  "keywords": [
    "chrome-extension",
    "books",
    "libby",
    "ratings",
    "reviews"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/chrome": "^0.0.277",
    "@types/node": "^24.8.1",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "esbuild": "^0.25.11",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "sharp": "^0.34.4",
    "typescript": "^5.9.3"
  }
}
